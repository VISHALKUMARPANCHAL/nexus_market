<script>
    function validate() {
        let isValid = true;

        function showError(inputId, message) {
            $('#' + inputId + "-error").text(message);
            isValid = false;
        }

        function clearError(inputId) {
            $('#' + inputId + "-error").text("");
        }
        let email = $('#billing-email').val().trim();
        clearError('email');
        if (!email) {
            showError("email", "Email Id is required");
        } else if (!/^\S+@\S+\.\S+$/.test(email)) {
            showError("email", "Invalid Email Id formate");
        }

        function validateAddress(addressType) {
            let firstName = $('#' + addressType + "-first_name").val().trim();
            let lastName = $('#' + addressType + "-last_name").val().trim();
            let phone = $('#' + addressType + "-phone_number").val().trim();
            let street = $('#' + addressType + "-street_address").val().trim();
            let city = $('#' + addressType + "-city").val().trim();
            let region = $('#' + addressType + "-state").val().trim();
            let zip = $('#' + addressType + "-zip").val().trim();
            let country = $('#' + addressType + "-country").val().trim();
            clearError(addressType + '-firstname');
            if (!firstName) {
                showError(addressType + "-firstname", "First Name is required");
            } else if (!/^[A-Za-z]+$/.test(firstName)) {
                showError(addressType + "-firstname", "Invalid First Name formate");
            }
            clearError(addressType + '-lastname');
            if (!lastName) {
                showError(addressType + "-lastname", "Last Name is required");
            } else if (!/^[A-Za-z]+$/.test(lastName)) {
                showError(addressType + "-lastname", "Invalid Last Name formate");
            }
            clearError(addressType + '-phone');
            if (!phone) {
                showError(addressType + "-phone", "Phone Number is required");
            } else if (!/^[6-9][0-9]{9}$/.test(phone)) {
                showError(addressType + "-phone", "Invalid Phone Number formate");
            }
            clearError(addressType + '-street');
            if (!street) {
                showError(addressType + "-street", "Street Address is required");
            } else if (!/^[A-Za-z0-9_\s]+$/.test(street)) {
                showError(addressType + "-street", "Invalid Street Address formate");
            }
            clearError(addressType + '-city');
            if (!city) {
                showError(addressType + "-city", "City is required");
            } else if (!/^[A-Za-z]+$/.test(city)) {
                showError(addressType + "-city", "Invalid city formate");
            }
            clearError(addressType + '-region');
            if (!region) {
                showError(addressType + "-region", "Region is required");
            } else if (!/^[A-Za-z]+$/.test(region)) {
                showError(addressType + "-region", "Invalid Region formate");
            }
            clearError(addressType + '-zipcode');
            if (!zip) {
                showError(addressType + "-zipcode", "Zip Code is required");
            } else if (!/^[0-9]{5,10}$/.test(zip)) {
                showError(addressType + "-zipcode", "Invalid Region formate");
            }
            clearError(addressType + '-country');
            if (!country) {
                showError(addressType + "-country", "Country is required");
            }
        }
        validateAddress("billing");
        validateAddress("shipping");
        return isValid;
    }
</script>